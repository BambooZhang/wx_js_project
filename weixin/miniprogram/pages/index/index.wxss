/**index.wxss**/

page {
  background: #ffffff;
  /* display: flex; */
  flex-direction: column;
  justify-content: flex-start;
}

/* 设置swiper属性 */
swiper {
  height: 300rpx;
  /* padding: 2px 10px; */
}
swiper-item image {
  width: 100%;
  height: 100%;
}

/** image navs **/
.navs {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}
.nav-item {
  width: 20%;
  display: flex;
  align-items: center;
  flex-direction: column;
  padding: 10rpx;
}
.nav-item .nav-image {
  width: 80rpx;
  height: 80rpx;
  /*border-radius: 50%;设置边界圆角*/
}
.nav-item text {
  padding-top: 20rpx;
  font-size: 25rpx;
}
 



